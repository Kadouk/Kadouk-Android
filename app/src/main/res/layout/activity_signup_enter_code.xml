<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_launcher_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <TextView
            android:text="@string/uniq"
            style="@style/textView"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/xlarge"/>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal"
            android:layout_marginLeft="@dimen/normal">

            <EditText
                android:id="@+id/signup_edt_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:inputType="number"
                android:hint="@string/enter_code"
                android:singleLine="true" />
        </android.support.design.widget.TextInputLayout>

        <TextView
            android:id="@+id/signup_txv_receive_code"
            android:text="@string/wait_to_receive_code"
            style="@style/textView"
            android:layout_gravity="right"
            android:layout_marginTop="@dimen/normal"
            android:layout_marginRight="@dimen/normal"/>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab_code"
        style="@style/buttonNext"
        app:fabSize="auto"
        android:onClick="sendCode"
    app:rippleColor="@color/colorPrimary"
        android:layout_gravity="right" />

</LinearLayout>