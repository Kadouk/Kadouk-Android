<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <android.support.v7.widget.Toolbar
        android:id="@+id/signup_enter_code_toolbar"
        style="@style/toolbar">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.5"
        android:gravity="center">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            style="@style/textInputLayout">

            <EditText
                android:id="@+id/signup_edt_code"
                style="@style/signupEditText"
                android:hint="@string/enter_code"
                android:maxLength="11"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="right">

                <TextView
                    android:id="@+id/signup_txv_time"
                    style="@style/textView"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/signup_txv_receive_code"
                    style="@style/textView"
                    android:layout_marginEnd="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:text="@string/wait_to_receive_code"/>

            </LinearLayout>
        </android.support.design.widget.TextInputLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="vertical"
        android:gravity="bottom">

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/signup_fab_code"
            style="@style/signUpFab"
            android:onClick="sendCode"
            app:fabSize="auto"
            app:rippleColor="@color/colorPrimary" />

    </LinearLayout>
</LinearLayout>

