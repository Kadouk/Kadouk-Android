<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/card_margin_bottom"
        android:layout_marginLeft="@dimen/card_margin_left"
        android:layout_marginRight="@dimen/card_margin_right"
        android:layout_marginTop="@dimen/card_margin_top"
        card_view:cardCornerRadius="@dimen/card_CornerRadius"
        card_view:cardElevation="@dimen/card_elevation">

        <RelativeLayout
            android:id="@+id/top_layout"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_image_height">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="@dimen/item_width"
                android:layout_height="@dimen/item_image_height"
                android:layout_above="@+id/tv_species"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY" />

            <TextView
                android:id="@+id/tv_species"
                android:layout_width="@dimen/item_width"
                android:layout_height="@dimen/item_text_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="bottom"
                android:background="@color/colorPrimaryDark"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:paddingRight="2dp"
                android:text="@string/app"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/item_text_size" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>