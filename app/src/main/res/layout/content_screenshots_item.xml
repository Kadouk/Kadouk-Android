<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/product_screenshots"
            android:layout_width="@dimen/screenshots_width"
            android:layout_height="@dimen/screenshots_width"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/space_single"
            android:layout_marginLeft="@dimen/space_single"
            android:layout_marginRight="@dimen/space_single"
            android:layout_marginTop="@dimen/space_single"
            android:scaleType="fitXY"/>

    </RelativeLayout>
</LinearLayout>