<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.kadouk.app.GameFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5">

            <TextView
                android:id="@+id/txv_app_open_cat"
                style="@style/textView"
                android:text="@string/open_category"
                android:layout_marginTop="@dimen/normal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/small"
                android:layout_marginRight="@dimen/small" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="0.5"
            android:gravity="end">

            <TextView
                android:id="@+id/txv_app_cat"
                style="@style/textView"
                android:text="@string/app_category"
                android:layout_marginTop="@dimen/normal"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/small"
                android:layout_marginRight="@dimen/small" />
        </LinearLayout>


    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_cat1"
        style="@style/recyclerView"
        android:layout_marginTop="@dimen/normal"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/main_recycler_cat2"
        style="@style/recyclerView" />


</LinearLayout>
