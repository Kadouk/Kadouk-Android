<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/appbar_layout_fragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/home_collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                android:id="@+id/page_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorAccent"
                android:height="250dp"
                app:layout_collapseMode="parallax">

            </TextView>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimary"
                android:elevation="4dp"
                app:layout_collapseMode="pin">

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/catOpenTitleLayout">

                    <TextView
                        android:id="@+id/cat1_txv_open"
                        style="@style/openCatTextView" />

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat1_txv_name"
                        style="@style/catNameTextView" />

                </LinearLayout>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat1"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat2_txv_open"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat2_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat2"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat3_txv_open"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat3_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat3"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat4_txv_open"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat4_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat4"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat5_txv_open"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat5_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat5"
                style="@style/recyclerView" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>
