<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.kadouk.app.GameFragment"
    android:orientation="vertical"
    android:background="@drawable/background_dark">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        style="@style/toolbar"
        android:elevation="@dimen/toolbar_shadow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/Theme.AppCompat.DayNight.NoActionBar">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/space_double"
            android:src="@mipmap/ic_games" />

        <TextView
            android:id="@+id/game_toolbar_title"
            style="@style/gameToolbarTitle"
            android:text="@string/games" />

    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout style="@style/catOpenTitleLayout">

                    <TextView
                        android:id="@+id/cat1_txv_open"
                        style="@style/openCatTextView" />

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat1_txv_name"
                        style="@style/catNameTextView" />

                </LinearLayout>

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat1"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat2_txv_open"/>
                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat2_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat2"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat3_txv_open"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat3_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat3"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat4_txv_open"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat4_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat4"
                style="@style/recyclerView" />
            <!-- /////////////////////////////////////////////////////////////////////////////////////////////////////// -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/catOpenTitleLayout">

                    <TextView
                        style="@style/openCatTextView"
                        android:id="@+id/cat5_txv_open"/>

                </LinearLayout>

                <LinearLayout
                    style="@style/catNameTitleLayout">

                    <TextView
                        android:id="@+id/cat5_txv_name"
                        style="@style/catNameTextView" />
                </LinearLayout>
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/main_recycler_cat5"
                style="@style/recyclerView" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>