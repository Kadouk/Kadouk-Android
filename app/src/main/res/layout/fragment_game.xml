                <TextView
                    style="@style/openCatTextView"
                    android:id="@+id/txv_app_open_cat1"/>

            </LinearLayout>

            <LinearLayout
                style="@style/categoryTitleLinearLayout"
                android:gravity="end">

                <TextView
                    android:id="@+id/txv_app_cat1"
                    style="@style/catTextView" />
            </LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler_cat1"
            style="@style/recyclerView" />
