               style="@style/categoryTitleLinearLayout">

                <TextView
                    style="@style/openCatTextView"
                    android:id="@+id/cat1_txv_open" />

            </LinearLayout>

            <LinearLayout
                style="@style/categoryTitleLinearLayout"
                android:gravity="end">

                <TextView
                    android:id="@+id/cat1_txv_name"
                    style="@style/catTextView" />



            </LinearLayout>

        </LinearLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/main_recycler_cat1"
            style="@style/recyclerView" />
