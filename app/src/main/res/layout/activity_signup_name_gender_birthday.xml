<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    tools:context=".SignUpNameGenderBirthdayActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/large"
        android:layout_marginRight="@dimen/large"
        android:layout_marginTop="@dimen/large"
        card_view:cardCornerRadius="@dimen/normal"
        card_view:cardElevation="@dimen/smaller">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/img_profile"
                style="@style/imageViewProfile"
                android:layout_width="@dimen/xlarge"
                android:layout_height="@dimen/xlarge"
                android:layout_marginTop="@dimen/normal"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY" />

            <EditText
                android:id="@+id/signup_edt_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/enter_your_kid_name"
                android:layout_marginTop="@dimen/normal"
                android:singleLine="true"
                android:background="@null"
                android:layout_gravity="center_horizontal"
                android:gravity="center"/>


            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/normal"
                android:gravity="end"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <TextView
                    style="@style/textView"
                    android:text="@string/girl" />

                <RadioButton
                    android:id="@+id/signup_name_gender_radio_girl"
                    style="@style/radioButtonGender"
                    android:layout_marginEnd="@dimen/normal"
                    android:layout_marginRight="@dimen/normal" />

                <TextView
                    style="@style/textView"
                    android:text="@string/boy" />

                <RadioButton
                    android:id="@+id/signup_name_gender_radio_boy"
                    style="@style/radioButtonGender"
                    android:checked="true" />

            </RadioGroup>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/normal"
                android:layout_gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="right">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/your_kid_birthday" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/smaller"
                    android:layout_marginBottom="@dimen/normal"
                    android:orientation="horizontal">
                    <Spinner
                        android:id="@+id/signup_name_gender_spinner_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <Spinner
                        android:id="@+id/signup_name_gender_spinner_month"
                        style="@style/spinner" />

                    <Spinner
                        android:id="@+id/signup_name_gender_spinner_day"
                        style="@style/spinner" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>