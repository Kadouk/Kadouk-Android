<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_single"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.1"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/space_double"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/install_app1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:contentDescription="@string/install_icon"
                app:srcCompat="@mipmap/ic_download" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0.5"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txv_app_name1"
                style="@style/ProductNameTextView" />

            <TextView
                android:id="@+id/txv_app_desc1"
                style="@style/ProductDetailsTextView" />

            <TextView
                android:id="@+id/txv_app_cost1"
                style="@style/ProductDetailsTextView" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_app1"
                android:layout_width="@dimen/list_image"
                android:layout_height="@dimen/list_image"
                android:layout_marginEnd="@dimen/space_double"
                android:layout_marginRight="@dimen/space_double"
                android:contentDescription="@string/app_icon" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/space_single"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:orientation="vertical"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/install_app2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:contentDescription="@string/install_icon"
                app:srcCompat="@mipmap/ic_purchase" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:orientation="vertical"
            android:layout_gravity="end">

            <TextView
                android:id="@+id/txv_app_name2"
                style="@style/ProductNameTextView" />
            <TextView
                android:id="@+id/txv_app_desc2"
                style="@style/ProductDetailsTextView" />
            <TextView
                android:id="@+id/txv_app_cost2"
                style="@style/ProductDetailsTextView"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_app2"
                android:layout_width="@dimen/list_image"
                android:layout_height="@dimen/list_image"
                android:layout_marginEnd="@dimen/space_double"
                android:layout_marginRight="@dimen/space_double"
                android:contentDescription="@string/app_icon" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>