<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:focusable="true"
        android:focusableInTouchMode="true">


        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/normal"
            android:layout_marginLeft="@dimen/normal"
            android:layout_marginTop="@dimen/xlarge">

            <EditText
                android:id="@+id/signup_edt_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLength="11"
                android:inputType="number"
                android:hint="@string/enter_your_number"
                android:singleLine="true"
                android:layout_marginLeft="@dimen/xlarge"/>
        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        style="@style/buttonNext"
        app:fabSize="auto"
        android:onClick="sendNumber"
        app:rippleColor="@color/colorPrimary"
        android:layout_gravity="right" />

</LinearLayout>