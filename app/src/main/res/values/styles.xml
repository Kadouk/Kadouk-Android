<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:homeAsUpIndicator">@mipmap/ic_upbutton</item>
    </style>

    <style name="toolbar" parent="AppTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/toolbar_height</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:background">@color/colorBg</item>
    </style>

    <style name="toolbarTitle" parent="textView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/title_text_size</item>
    </style>

    <style name="gameToolbarTitle" parent="toolbarTitle" >
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">@dimen/space_single</item>
    </style>

    <style name="productToolbarTitle" parent="toolbarTitle" >
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="recyclerView" parent="AppTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_double</item>
        <item name="android:layout_marginBottom">@dimen/space_double</item>
    </style>

    <style name="button" parent="AppTheme" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="textView" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editText" parent="AppTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="catOpenTitleLayout" parent="AppTheme" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">0.3</item>
        <item name="android:layout_marginTop">@dimen/space_single</item>
    </style>

    <style name="catNameTitleLayout" parent="AppTheme" >
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_weight">0.7</item>
        <item name="android:layout_marginTop">@dimen/space_single</item>
        <item name="android:gravity">end</item>

    </style>

    <style name="textInputLayout" parent="AppTheme" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:orientation">horizontal</item>-->
        <!--<item name="android:layout_weight">0.5</item>-->
        <item name="android:layout_marginLeft">@dimen/space_large</item>
        <item name="android:layout_marginRight">@dimen/space_large</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginBottom">?attr/actionBarSize</item>
    </style>

    <style name="openCatTextView" parent="textView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">@dimen/space_large</item>
        <item name="android:text">@string/open_category</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">12sp</item>

    </style>

    <style name="catNameTextView" parent="textView">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginRight">@dimen/space_large</item>
        <item name="android:text">@string/app_category</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ProductTextView" parent="textView">
        <item name="android:layout_gravity">end</item>
        <item name="android:layout_marginRight">@dimen/space_double</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProductNameTextView" parent="ProductTextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="ProductDetailsTextView" parent="ProductTextView">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:layout_marginTop">@dimen/space_single</item>
    </style>

    <style name="ProductProfileTextView" parent="textView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:layout_marginTop">@dimen/space_single</item>
    </style>

    <style name="tab_title" parent="textView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="signUpFab" parent="button">
        <item name="android:layout_marginBottom">@dimen/space_double</item>
        <item name="android:layout_marginRight">@dimen/space_double</item>
        <item name="android:layout_marginEnd"
            tools:ignore="DuplicateDefinition,NewApi">@dimen/space_double</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="signUpNextFab" parent="signUpFab">
        <item name="android:clickable">false</item>
        <item name="android:src">@mipmap/ic_next</item>
    </style>

    <style name="signUpFinishFab" parent="signUpFab">
        <item name="android:src">@mipmap/ic_check</item>
    </style>

    <style name="buttonBack" parent="button">
        <item name="android:layout_marginBottom">@dimen/space_double</item>
        <item name="android:layout_marginLeft">@dimen/space_double</item>
        <item name="android:layout_marginStart"
            tools:ignore="DuplicateDefinition,NewApi">@dimen/space_double</item>
        <item name="android:text">@string/back</item>
    </style>

    <style name="buttonTopRight" parent="button">
        <item name="android:layout_marginRight">@dimen/space_double</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/space_double</item>
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="spinner">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginLeft">@dimen/space_single</item>
    </style>

    <style name="textViewTitle" parent="textView">
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/space_double</item>
    </style>


    <style name="signupEditText" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <style name="numbersEditText" parent="signupEditText">
        <item name="android:inputType">number</item>
        <item name="android:gravity">right</item>
        <item name="android:paddingTop">@dimen/space_single</item>
    </style>

    <style name="profileEditText" parent="signupEditText" >

        <item name="android:gravity">center</item>
        <item name="android:hint">@string/enter_your_kid_name</item>
        <item name="android:layout_marginTop">@dimen/space_double</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="radioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="radioButtonGender" parent="radioButton">
        <item name="android:onClick">onGenderItemClicked</item>
    </style>

    <style name="radioButtonCategory" parent="radioButton">
        <item name="android:layout_marginRight">@dimen/space_single</item>
        <item name="android:layout_marginEnd" tools:ignore="NewApi">@dimen/space_single</item>
        <item name="android:layout_marginLeft">@dimen/space_single</item>
        <item name="android:layout_marginStart" tools:ignore="NewApi">@dimen/space_single</item>
        <item name="android:onClick">onCategoryClicked</item>
    </style>


    <style name="imageView" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@drawable/ic_launcher_background</item>
    </style>

    <style name="imageViewProfile" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/space_large</item>
        <item name="android:src">@mipmap/ic_profile</item>
        <item name="android:layout_gravity">center_horizontal</item>

    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_light</item>

    </style>

    <style name="noAnimTheme" parent="android:Theme">
        <item name="android:windowAnimationStyle">@null</item>
    </style>

    <style name="exp_toolbar_title" parent="@android:style/TextAppearance.Holo.Medium">
        <item name="android:textSize">36dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="coll_toolbar_title" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>